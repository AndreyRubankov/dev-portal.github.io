@import vars.gspec
@import header.gspec

@set
   # marginX1    "24px"
   # marginX2    "48px"
   # marginX3    "76px"
   # marginX4    "96px"

    lineHeight  css line-height is
    color       css color is

@objects
    h2      css     h2
    header-main                 xpath   //*[@id="getting-started"]
    header-h2-introduction      xpath   //*[@id="introduction"]

    table-dataset               xpath   //*[@id="main-block"]/div/table

    p-lead                      xpath   //*[@id="main-block"]/div/p[1]
    p-body                      xpath   //*[@id="main-block"]/div/p[2]
    p-simple-01                 xpath   //*[@id="main-block"]/div/p[3]

= general layout test =
    @on desktop
        header-main:
            css font-size is "54px"
            css color is "rgba(65, 65, 65, 1)"
            css font-family contains "InterstateWGL-Black"

        header-h2-introduction:
            height 48px
            css line-height is "48px"
            css color is "rgba(65, 65, 65, 1)"
            css font-family contains "TMSans-Bold"
            css font-size is "36px"

        table-dataset:
            css border-bottom-color is "rgba(228, 231, 233, 1)"
            css border-bottom-style is "solid"
            css border-top-width is "1px"
            css border-left-width is "1px"
            css font-family contains      "TMSans-Regular"
            css color is "rgba(118, 134, 146, 1)"
            css background-color is "rgba(0, 0, 0, 0)"
            css font-size is "16px"
            css margin-bottom is ${marginX2}
            css margin-top is ${marginX2}

        p-lead:
            height 32px
            ${lineHeight} "32px"
            ${color} "rgba(118, 134, 146, 1)"
            css font-family contains "TMSans-Light"

        p-body, p-simple-01:
            css box-sizing is "border-box"
            ${color} "rgba(118, 134, 146, 1)"
            css font-size is "16px"

            # css font-feature-settings is "kern"
            # css font-kerning is 'normal'
            # css font-language-override is "normal"
            # css font-synthesis is "weight style"
            # css font-variant is "normal"
            # css font-variant-alternates is "normal"
            # css font-variant-caps is "normal"
            # css font-variant-east-asian is "normal"
            # css font-variant-ligatures is "normal"
            # css font-variant-numeric is "normal"
            # css font-variant-position is "normal"
            # css font-weight is "400"

            ${lineHeight} "24px"
            css margin-bottom is ${marginX1}
            css margin-left is "0px"
            css margin-right is "0px"
            css margin-top ${marginX1}
            css padding-bottom is "0px"
            css padding-left is "0px"
            css padding-right is "0px"
            css padding-top is "0px"

        p-body:
            css font-family contains "TMSans-Light,Helvetica,Arial,sans-serif"

        p-simple-01:
            css font-family contains "TMSans-Light"