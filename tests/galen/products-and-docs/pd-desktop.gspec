@objects
    header                      css  .top-bar
    logo                        css  #header-logo img
    nav-item-*                  css  #menu a

    social                      id   promo-social
    twitter                     css  .twitter-tweet

    top-promo                   id   top-promo
    main-header                 css  #top-promo h1
    main-desc                   css  #top-promo p
    get-api-btn                 css  #top-promo .tm-btn-white
    explore-btn                 css  #top-promo .tm-btn-transparent

    columns-block               css     .columns
    columns-container           css     .columns .row-container
    column-item-*               css     .columns .row-container>div

    partners-block              id      bottom-promo
    footer                      id      footer

@set
    marginX1    24px
    marginX2    48px
    marginX3    76px
    marginX4    96px

    headerMain                 xpath   //*[@id="getting-started"]
    headerH2Intro      xpath   //*[@id="introduction"]
    pLead                      xpath   //*[@id="main-block"]/div/p[1]
    tableDataset               xpath   //*[@id="main-block"]/div/table
    pBody                      xpath   //*[@id="main-block"]/div/p[2]
    pSimple01               xpath   //*[@id="main-block"]/div/p[3]

= Navigation test =
    @on desktop
        logo:
            visible

    @on desktop
        global:
            count any nav-item-* is 6

    @on desktop
        nav-item-1:
            text is "PRODUCTS & DOCS"
            aligned horizontally all nav-item-2
        nav-item-2:
            text is "PARTNERS"
            aligned horizontally all nav-item-3
        nav-item-3:
            text is "SUPPORT"
            aligned horizontally all nav-item-4
        nav-item-4:
            text is "BLOGS"
            aligned horizontally all nav-item-5
        nav-item-5:
            text is "EVENTS"
            aligned horizontally all nav-item-6
        nav-item-6:
            text is "OPEN SOURCE"

= general layout test =
    @on desktop
        headerMain:
            height 64px
            color #414141
            font-family "InterstateWGL-Black"

        headerH2Intro:
            height 48px
            line-height 48px
            color #414141
            font-family "TMSans-Bold"

        pLead:
            height 32px
            line-height 32px
            color #768692
            font-family "TMSans-Light"

        tableDataset:
            border-bottom-color        rgb(228, 231, 233)
            border-bottom-style        solid
            border-bottom-width        1px
            display                table
            css font-family contains      "TMSans-Regular"
            color           rgb(118, 134, 146)
            font-size       normal
            margin-bottom   ${marginX2}
            margin-top      ${marginX2}

        pBody, pSimple01:
            box-sizing border-box
            color #768692
            font-family "TMSans-Light",Helvetica,Arial,sans-serif
            font-feature-settings "kern"
            font-kerning normal
            font-language-override normal
            font-size 16px
            font-size-adjust none
            font-stretch normal
            font-style normal
            font-synthesis weight style
            font-variant normal
            font-variant-alternates normal
            font-variant-caps normal
            font-variant-east-asian normal
            font-variant-ligatures normal
            font-variant-numeric normal
            font-variant-position normal
            font-weight 400
            line-height 24px
            margin-bottom ${marginX1}
            margin-left 0px
            margin-right 0px;
            margin-top ${marginX1}
            padding-bottom 0px
            padding-left 0px
            padding-right 0px
            padding-top 0px
